@using SaluScanner.Core.Entities
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>SERTİFİKA ADI</th>
        <th>SERTİFİKA AÇIKLAMASI</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CertificateName</th>
                <th>@item.Description</th>
                <td><a class="btn btn-warning" asp-controller="Certificate" asp-action="Update" asp-route-id="@item.Id">GÜNCELLE</a></td>
                <td><a class="btn btn-danger" asp-controller="Certificate" asp-action="Remove" asp-route-id="@item.Id">SİL</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Certificate/Add/" class="btn btn-primary">YENİ SERTİFİKA EKLE</a>

